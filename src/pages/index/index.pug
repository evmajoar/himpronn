//- Главная страница
extends ../../layout/layout.pug
include ../../components/logo/logo.pug
include ../../components/nav/nav.pug

block meta

  //- Основные данные
  include index.data.pug

  title=title + ' | ' + siteName
  meta(name='description', content=description)
  meta(name='keywords', content=keywords)

  //- Разметка Open Graph
  meta(property='og:title', content=title)
  meta(property='og:description', content=description)
  meta(property='og:type', content='website')
  meta(property='og:url', content=siteURL)
  meta(property='og:locale', content=language + '_' + language.toUpperCase())
  meta(property='og:image', content=imagesPath + 'poster.png')
  meta(property='og:image:type', content='image/png')
  meta(property='og:image:height', content='512')
  meta(property='og:image:width', content='512')
  meta(property='og:site_name', content=siteName)

  //- Разметка Twitter Card
  meta(name='twitter:card', content='summary')
  meta(name='twitter:title', content=title)
  meta(name='twitter:description', content=description)
  meta(name='twitter:image', content=imagesPath + 'poster.png')
  meta(name='twitter:site', content=siteName)

block append head
  link(rel='canonical' href=siteURL + siteURN)
  link(rel='stylesheet' href='styles/' + fileName + '.css')

block preloader
  include ../../components/preloader/preloader.pug

block header
  include ../../components/page-header/page-header.pug

block content
  include ../../components/statistics/statistics.pug
  include ../../components/glikoli/glikoli.pug
  include ../../components/products/products.pug
  include ../../components/about/about.pug
  include ../../components/best/best.pug
  include ../../components/clients/clients.pug
  include ../../components/stock/stock.pug

block footer
  include ../../components/page-footer/page-footer.pug

block modals
  include ../../components/modal/modal.pug

block append foot
  script(src='//cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js')
  script(src='//cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js')
  script(src='//cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/3.3.4/jquery.inputmask.bundle.min.js')
  script(src='scripts/' + fileName + '.js')
